# Uncomment the next line to define a global platform for your project
platform :ios, '13.0'

def testing_pods
    pod 'Nimble'                       # a matcher framework
    pod 'Quick'                        # improve tests readability and structure
end

target 'test.Notes' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  target 'test.NotesTests' do
    # Pods for testing
    testing_pods
  end
end

